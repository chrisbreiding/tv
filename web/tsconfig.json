{
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "./dist/",
    "./.history/",
    "./node_modules/"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "jsx": "react",
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2018"
  }
}
