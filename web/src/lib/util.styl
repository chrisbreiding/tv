.options {
  display: none;
  position: absolute;
  top: -6px;

  ul {
    background: darkest-color;
    border-radius: 3px;
    border: solid 1px #000;
    padding: 5px 10px;
    white-space: nowrap;
  }

  li {
    display: inline-block;
    margin-left: 10px;

    &:first-child {
      margin-left: 0;
    }
  }

  button {
    background: none;
    border: none;
    padding: 0;
    color: primary-color;

    +hover() {
      color: secondary-color;
    }
  }
}

/* Credit: https://projects.lukehaas.me/css-loaders/ */
.spinner,
.spinner:after {
  border-radius: 50%;
  display: block;
  margin-right: 1em;
  width: 1.2em;
  height: 1.2em;
}

.spinner {
  font-size: 10px;
  position: relative;
  text-indent: -9999em;
  border-top: 0.2em solid rgba(255, 255, 255, 0.2);
  border-right: 0.2em solid rgba(255, 255, 255, 0.2);
  border-bottom: 0.2em solid rgba(255, 255, 255, 0.2);
  border-left: 0.2em solid rgba(255, 255, 255, 0.8);
  transform: translateZ(0);
  animation: spin 1.5s infinite linear;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
