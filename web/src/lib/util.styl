.options {
  display: none;
  position: absolute;
  top: -6px;

  ul {
    background: darkest-color;
    border-radius: 3px;
    border: solid 1px #000;
    padding: 5px 10px;
    white-space: nowrap;
  }

  li {
    display: inline-block;
    margin-left: 10px;

    &:first-child {
      margin-left: 0;
    }
  }

  button {
    background: none;
    border: none;
    padding: 0;
    color: primary-color;

    +hover() {
      color: secondary-color;
    }
  }
}
