.flash-message {
  left: 0;
  position: fixed;
  right: 0;
  text-align: center;
  top: 0.5em;

  p {
    background: darkest-color;
    border: solid 1px lighten(dark-color, 10%);
    border-radius: 3px;
    display: inline-block;
    padding: 0.5em 1em;

    i {
      margin-right: 0.5em;
    }
  }
}
