.all-episodes {
  h2 {
    margin-bottom: 0;
  }

  .loader {
    background: darkest-color;
    border-radius: 3px;
    justify-content: flex-start;
    padding: 0.6em;
    // get loader to be flush with left, bottom, right of container
    box-sizing: content-box;
    padding-right: 1.4em;
    position: relative;
    left: -1em;
    top: 0.5em;
    width: 100%;
  }

  main {
    box-shadow: inset 0 0 1em rgba(0, 0, 0, 0.5);
  }
}

.show-edit-modal {
  .form fieldset:first-child {
    margin-top: 0.4em;
  }

  header {
    height: 1em;
  }

  main {
    box-shadow: inset 0 0 1em rgba(0, 0, 0, 0.5);
  }

  footer {
    display: flex;
    justify-content: space-between;

    a {
      color: darken(error-color, 20%);
      margin-top: 0.6em;

      +hover() {
        color: error-color;
      }
    }
  }

  .hide {
    display: none;
  }
}

.confirm-delete-modal {
  main {
    padding: 2em;
  }

  p {
    margin-bottom: 0;
  }
}
