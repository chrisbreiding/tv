.search {
  .modal-dialog {
    display: flex;
    flex-direction: column;
    max-width: 20em;
  }

  &.has-results .modal-dialog {
    max-width: none;
  }

  header h3 {
    margin-bottom: 1em;
  }

  &.has-query header {
    border-bottom: solid 1px soften(background-color, 10%);
    padding-bottom: 1em;
  }

  form {
    order: 2;
    text-align: center;
    width: 100%;

    input {
      border-radius: 3px 0 0 3px;
      border-right: none;
    }

    button {
      border-radius: 0 3px 3px 0;
    }
  }

  .results {
    max-width: 40em;

    li {
      display: flex;
      margin: 2em 0;

      &:first-child {
        margin-top: 0;
      }

      &:last-child {
        margin-bottom: 0;
      }

      &.exists {
        opacity: 0.5;
      }

      button {
        min-width: 2.5em;

        &[disabled] {
          background: neutral-color;
          border-color: neutral-color;
          color: darken(neutral-color, 40%);
          cursor: default;
        }
      }

      div {
        margin-left: 1em;
      }

      img {
        margin-bottom: 0.5em;
        max-width: 100%;
      }

      dt {
        color: darken(light-color, 20%);
        float: left;
        width: 7em;
      }

      dd {
        margin-bottom: 0.5em;
        margin-left: 7em;
      }

      dt.no-value,
      dt.no-value + dd {
        display: none;
      }
    }
  }

  .no-results {
    margin-top: 2em;
    text-align: center;
  }
}
