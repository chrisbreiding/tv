body.modal-dialog-present {
  overflow: hidden;
}

.modal-dialog-overlay {
  align-items: center;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  bottom: 0;
  left: 0;
  justify-content: center;
  position: fixed;
  right: 0;
  top: 0;
  z-index: 10;
}

.modal-dialog {
  background: dark-color;
  border: solid 1px lighten(dark-color, 10%);
  border-radius: 3px;
  display: flex;
  flex-direction: column;
  margin: 20px;
  max-height: 90%;
  position: relative;

  p {
    margin-bottom: 1.2em;
  }

  header,
  .modal-dialog-content,
  footer {
    padding: 1em 1.5em;
  }

  .modal-dialog-content {
    overflow-y: scroll;
  }

  .modal-controls {
    display: flex;
    justify-content: flex-end;
  }

  .ok {
    margin-left: 0.6em;
  }

  .cancel {
    background: neutral-color;
    color: dark-color;

    +hover() {
      background: darken(neutral-color, 20%);
    }
  }

  .close {
    background: none;
    border: none;
    color: rgba(255, 255, 255, 0.6);
    font-size: 1.2em;
    position: absolute;
    right: 0;
    top: 0;

    +hover() {
      background: #000;
      color: light-color;
    }
  }
}
