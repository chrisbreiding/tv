.settings {
  background: tertiary-color-contrast;
  border-left: solid 0.4rem tertiary-color;
  border-top: solid 0.4rem tertiary-color;
  flex-grow: 2;
  padding: 2rem 4rem;

  h3 {
    margin-top: 1.5rem;
  }

  form {
    .general label,
    p {
      color: soften(foreground-color);
    }

    p {
      margin: 0.4rem 0;

      svg {
        color: primary-color;
      }

      em {
        color: foreground-color;
        font-style: normal;
        font-family: monospace;
      }
    }

    fieldset {
      // background: background-color;
      border-top: solid 1px soften(background-color, 10%);
      margin: 0.8rem 0;
      padding: 0.2rem 0.6rem 0.8rem;
    }

    label {
      margin-top: 0.6rem;
    }

    button {
      float: none;
    }
  }

  .general {
    label {
      cursor: pointer;
      display: inline-block;
    }
  }

  .select {
    button {
      background: none;
      border-radius: none;

      +hover() {
        background: darken(primary-color, 20%);
      }

      &:first-child {
        border-radius: 3px 0 0 3px;
      }

      &:last-child {
        border-radius: 0 3px 3px 0;
      }
    }

    .selected {
      background: primary-color;
      border-color: primary-color;

      +hover() {
        background: primary-color;
      }
    }
  }

  .checkbox {
    background: none;
    margin-right: 0.5rem;
    padding: 0.2rem 0.3rem;

    svg {
      visibility: hidden;
    }

    &.is-checked svg {
      visibility: visible;
    }
  }

  .delete-container {
    display: flex;
    justify-content: flex-end;
  }

  .controls {
    padding: 0.6rem;
  }

  .add-link {
    background: background-color;
    border-color: soften(light-color, 40%);
    font-size: 0.8rem;
    padding: 0.3rem 0.6rem;

    +hover() {
      background: soften(background-color, 20%);
    }
  }

  footer {
    align-items: center;
    border-top: solid 1px soften(background-color, 10%);
    display: flex;
    justify-content: space-between;
    margin-top: 2rem;
    padding: 0.6rem;

    p {
      color: darken(neutral-color, 20%);
      font-size: 0.8rem;
      margin: 0 2rem 0 0;
    }

    .outdated-warning {
      color: warning-color;
      margin-left: 0.6rem;
    }

    button {
      margin-left: 1rem;
    }
  }
}

.settings-tooltip {
  background: #111;
  border-color: solid 1px soften(background-color, 10%);
  max-width: 10rem;
}
