.settings {
  .modal-dialog {
    border: none;
    max-height: 100%;
    max-width: 40em;
    width: auto;
  }

  header,
  main,
  footer {
    padding: 0.8rem 1.2rem;

    h2 {
      margin: 0;
    }
  }

  header {
    border-bottom: solid 1px soften(background-color, 10%);
  }

  main {
    background: harden(background-color);

    h3 {
      margin-top: 0;
    }

    .general label,
    p {
      color: soften(foreground-color);
    }

    p {
      margin: 0.4em 0;

      svg {
        color: primary-color;
      }

      em {
        color: foreground-color;
        font-style: normal;
        font-family: monospace;
      }
    }
  }

  .form {
    fieldset {
      background: background-color;
      border: solid 1px soften(background-color, 10%);
      margin: 0.8em 0;
      padding: 0.2em 0.6em 0.8em;
    }

    label {
      margin-top: 0.6em;
    }

    button {
      float: none;
    }
  }

  .general {
    margin-bottom: 2rem;

    label {
      cursor: pointer;
      margin-bottom: 1rem;
    }

    button {
      background: none;
      margin-right: 0.5rem;
      padding: 0.2rem 0.3rem;

      svg {
        visibility: hidden;
      }

      &.is-checked svg {
        visibility: visible;
      }
    }
  }

  .add-link {
    border-color: success-color;
    background: success-color;
  }

  footer {
    align-items: flex-end;
    border-top: solid 1px soften(background-color, 10%);
    display: flex;

    p {
      color: darken(neutral-color, 20%);
      font-size: 0.8em;
      margin: 0 2em 0 0;
    }

    button {
      margin-left: 1em;
    }
  }
}
