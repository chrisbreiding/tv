.time-periods {
  display: flex;
  flex-wrap: wrap;
  min-height: 100%;
  width: 100%;
}

.shows {
  border: solid 0.4em;
  padding: 1.1em;

  &.recent,
  &.upcoming {
    width: 40%;

    @media all and (max-width: 60em) {
      width: 50%;
    }

    @media all and (max-width: 40em) {
      width: 100%;
    }
  }

  &.recent {
    background: primary-color-contrast;
    border-color: primary-color;
  }

  &.upcoming {
    background: secondary-color-contrast;
    border-color: secondary-color;
  }

  &.off-air {
    background: tertiary-color-contrast;
    border-color: tertiary-color;
    width: 20%;

    h3 {
      font-size: 1em;
    }

    @media all and (max-width: 60em) {
      width: 100%;

      h3 {
        margin: 0.3em 0;
      }

      > ul {
        display: flex;
        flex-wrap: wrap;

        > li {
          flex-shrink: 0;
          width: 33%;
        }
      }
    }

    @media all and (max-width: 40em) {
      > ul {
        > li {
          width: 50%;
        }
      }
    }

    @media all and (max-width: 25em) {
      > ul {
        flex-direction: column;
        flex-wrap: nowrap;

        > li {
          width: 100%;
        }
      }
    }
  }

  .empty-message {
    display: none;
  }

  &.empty {
    > ul {
      display: none;
    }

    .empty-message {
      display: block;
    }
  }
}
