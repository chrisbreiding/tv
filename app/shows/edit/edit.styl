.show-edit {
  min-width: 25em;

  fieldset {
    margin: 0.8em 0;
  }

  label {
    display: block;
    margin-bottom: 0.4em;
  }

  input {
    box-sizing: border-box;
    display: block;
    width: 100%;
  }

  footer {
    @extend .clearfix;
  }

  button {
    float: right;
  }

  a {
    color: darken(error-color, 20%);
    float: left;
    margin-top: 0.6em;

    +hover() {
      color: error-color;
    }
  }
}
