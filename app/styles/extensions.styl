$clearfix {
  &:before,
  &:after {
    content: "";
    display: table;
  }
  &:after {
    clear: both;
  }
}

$icon-button {
  background: none;
  border: none;
  color: primary-color;
  font-size: 1.3em;

  &:hover,
  &:focus,
  &:active {
    background: none;
    color: secondary-color;
  }
}

$form {
  min-width: 25em;

  fieldset {
    margin: 0.8em 0;
  }

  label {
    display: block;
    margin-bottom: 0.4em;
  }

  input {
    box-sizing: border-box;
    display: block;
    width: 100%;
  }

  button {
    float: right;
  }
}
