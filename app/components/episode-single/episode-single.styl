airdate-status(color, opacity = 1.0) {
  .episode-number span {
    background: color;
    opacity: opacity;
  }

  .airdate {
    color: color;
    opacity: opacity;
  }
}

.episode-single {
  -webkit-align-content: space-between;
  align-content: space-between;
  display: -webkit-flex;
  display: flex;
  border-radius: 3px;
  font-size: .9em;
  padding: 0.5em;

  span {
    display: block;
  }

  & > span {
    margin-left: 0.8em;
  }

  .episode-number span,
  .airdate,
  .title,
  .file-name {
    padding: 0.3em 0;
  }

  .episode-number {
    margin-left: 0;

    span {
      background: darken(neutral-color, 40%);
      border-radius: 3px;
      color: light-color;
      text-align: center;
      width: 3em;
    }
  }

  .episode-number,
  .airdate {
    -webkit-flex-shrink: 0;
    flex-shrink: 0;
  }

  .title,
  .file-name {
    cursor: pointer;

    &:hover {
      color: #FFF;
    }
  }

  .file-name {
    display: none;
  }

  &.show-file-name {
    .title {
      display: none;
    }

    .file-name {
      display: block;
    }
  }

  &.today {
    background: darkest-color;
  }

  &.far-past {
    airdate-status(primary-color, 0.5);
  }

  &.past {
    airdate-status(primary-color, 0.7);
  }

  &.recent {
    airdate-status(primary-color);
  }

  &.upcoming {
    airdate-status(secondary-color);
  }

  &.future {
    airdate-status(secondary-color, 0.7);
  }

  &.far-future {
    airdate-status(secondary-color, 0.5);
  }
}
