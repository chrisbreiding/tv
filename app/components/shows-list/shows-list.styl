.shows-list {
  box-sizing: border-box;
  float: left;
  padding: 1.5em;

  h3 {
    span {
      position: relative;
    }

    .options {
      display: none;
      left: 100%;
      padding-left: 10px;
      position: absolute;
      top: -6px;
    }

    &:hover .options {
      display: block;
    }

    ul {
      background: darkest-color;
      border-radius: 3px;
      border: solid 1px #000;
      padding: 5px 10px;
      white-space: nowrap;
    }

    li {
      display: inline-block;
      margin-left: 10px;

      &:first-child {
        margin-left: 0;
      }
    }
  }
}
