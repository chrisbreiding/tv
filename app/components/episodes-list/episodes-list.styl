.episodes-list {
  font-size: .9em;

  li {
    border-radius: 3px;
    padding: 0.5em;
  }

  span {
    display: inline-block;
    margin-left: 0.6em;
  }

  .episode-number {
    background: darken(neutral-color, 40%);
    border-radius: 3px;
    color: light-color;
    margin-left: 0;
    padding: 0.2em 0;
    text-align: center;
    width: 3em;
  }
}
